{% extends 'base.html.twig' %}
{% block title %}Searching: {{ searchterm }}{% endblock %}
{% block body %}
<div class="wrapper">
    <div class="search-results">
        <h2>Search: {{ searchterm }}</h2>
{% for result in results %}
        <div class="result">
            <div class="search-title">{{ result[1] }}</div>
            <div class="preview">Some document preview</div>
            <div class="markdown-path">
                <a href="{{ path('note', {'directory': result[0], 'note' : result[1] }) }}">{{ result[0] ~ '/' ~ result[1] }}</a>
            </div>
        </div>
{% endfor %}
    </div>
</div>
{% endblock %}
