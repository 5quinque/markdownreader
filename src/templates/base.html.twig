<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}MarkdownReader{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('/css/style.css') }}">
    </head>
    <body>
        <div class="top-bar-container">
            <div class="top-bar">
                <div class="branding"><a href="{{ path('index') }}"><img src="{{ asset('/brand.png') }}"></a></div>
                <div class="search">
                    {{ form(searchform, { 'attr': {'class': 'search_form'} }) }}
                    <div id="typeahead" class="typeahead hidden">
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="column column-20 bgp">
                    {{ include('page/_navigation.html.twig') }}
                </div>
                <div class="column column-80">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
    <script>
        let markdownFiles = JSON.parse('{{ files|json_encode|e('js') }}');
    </script>
    <script src="{{ asset('/js/script.js') }}"></script>
    <script src="{{ asset('/js/typeahead.js') }}"></script>
    {% block javascripts %}{% endblock %}
    </body>
</html>
